{
  // Spelling:
  "cSpell.words": [
    "bitwalker",
    "dockerized",
    "fkirc",
    "markdownlint",
    "nosborn",
    "softprops",
    "tvdias"
  ],

  // Task explorer:
  "taskExplorer.exclude": ["**/spec/**"],

  // Markdownlint:
  "markdownlint.config": {
    "MD013": true
  },

  // Comment bars:
  "commentbars.quickPresets": [
    {
      "label": "Section title",
      "fillChar": "-",
      "width": 50,
      "thickness": 3,
      "seamlessFill": false
    }
  ],

  // Override languages:
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
